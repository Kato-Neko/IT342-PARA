<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Header Title -->
    <TextView
        android:id="@+id/search_route_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Jeepney Code Suggestions"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/clear_route_button" />

    <!-- Clear Button -->
    <ImageButton
        android:id="@+id/clear_route_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_clear"
        android:contentDescription="Clear"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- From-To Card Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/fromToCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:elevation="6dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/search_route_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <!-- From Icon -->
            <ImageView
                android:id="@+id/fromIcon"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/orange_dot"
                android:contentDescription="From"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Dotted Vertical Line -->
            <View
                android:id="@+id/lineBetween"
                android:layout_width="2dp"
                android:layout_height="40dp"
                android:background="@drawable/dotted_lines"
                app:layout_constraintTop_toBottomOf="@id/fromIcon"
                app:layout_constraintStart_toStartOf="@id/fromIcon"
                app:layout_constraintBottom_toTopOf="@id/toIcon" />

            <!-- To Icon -->
            <ImageView
                android:id="@+id/toIcon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_location"
                android:contentDescription="To"
                app:layout_constraintTop_toBottomOf="@id/lineBetween"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- From Text -->
            <TextView
                android:id="@+id/initial_location_placeholder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="From: Initial Location"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@id/fromIcon"
                app:layout_constraintTop_toTopOf="@id/fromIcon"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- To Text -->
            <TextView
                android:id="@+id/destination_placeholder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="To: Destination"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/toIcon"
                app:layout_constraintTop_toTopOf="@id/toIcon"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Fetch Button -->
    <Button
        android:id="@+id/fetch_routes_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fetch Routes"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/fromToCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/fetch_routes_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Status Text -->
    <TextView
        android:id="@+id/status_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:textSize="14sp"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="4dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/progressBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RecyclerView for Suggestions -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/routesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/status_text"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
